<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity">


    <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/containFragment"/>


    <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/startScanningCC"
            android:text="Scanear Cedula"/>


    <Button
            app:layout_constraintTop_toBottomOf="@id/startScanningCC"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/startScannigLicenseDriver"
            android:text="Scanear Licencia Conducir"/>

</android.support.constraint.ConstraintLayout>